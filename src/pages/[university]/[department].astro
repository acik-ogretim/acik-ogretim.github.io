<script>
  const searchInput = document.getElementById("courseSearch");
  const semesterSections = document.querySelectorAll(".semester-section");
  const noResults = document.getElementById("noResults");

  searchInput?.addEventListener("input", (e) => {
    const term = (e.target as HTMLInputElement).value.toLowerCase().trim();
    let totalVisible = 0;

    semesterSections.forEach((section) => {
      const cards = section.querySelectorAll(".course-card");
      let visibleInSemester = 0;

      cards.forEach((card) => {
        const name = (card as HTMLElement).dataset.name || "";
        const code = (card as HTMLElement).dataset.code || "";

        if (name.includes(term) || code.includes(term)) {
          (card as HTMLElement).style.display = "flex";
          visibleInSemester++;
          totalVisible++;
        } else {
          (card as HTMLElement).style.display = "none";
        }
      });

      // Hide or show the whole semester section
      (section as HTMLElement).style.display =
        visibleInSemester > 0 ? "block" : "none";
    });

    if (totalVisible === 0) {
      noResults?.classList.remove("hidden");
    } else {
      noResults?.classList.add("hidden");
    }
  });
</script>
