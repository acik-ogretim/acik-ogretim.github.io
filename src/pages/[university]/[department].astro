<script>
  const STORAGE_KEY = "favorite-courses";

  function getFavorites(): any[] {
    try {
      return JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
    } catch {
      return [];
    }
  }

  function saveFavorites(favs: any[]) {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(favs));
  }

  function toggleFavorite(courseData: any) {
    const favs = getFavorites();
    const index = favs.findIndex(
      (f) => f.id === courseData.id && f.deptId === courseData.deptId,
    );
    if (index > -1) favs.splice(index, 1);
    else favs.push(courseData);
    saveFavorites(favs);
    updateUI();
  }

  function updateUI() {
    const favs = getFavorites();
    const favSection = document.getElementById("favorites-section");
    const favGrid = document.getElementById("favorites-grid");
    const favCount = document.getElementById("favorites-count");

    // Get current dept URL parts to filter relevant favorites if needed,
    // but usually favorites section shows all or we filter by current dept.
    // Let's filter by current department for this page.
    const currentDeptId = document
      .querySelector("[data-department-id]")
      ?.getAttribute("data-department-id");

    document.querySelectorAll(".course-card-wrapper").forEach((card) => {
      const courseId = card.getAttribute("data-course-id");
      const deptId = card.getAttribute("data-department-id");
      const icon = card.querySelector(".fav-icon");
      const isFav = favs.some((f) => f.id === courseId && f.deptId === deptId);

      if (icon) {
        if (isFav) {
          icon.textContent = "â˜…";
          icon.classList.add("text-yellow-500");
        } else {
          icon.textContent = "â˜†";
          icon.classList.remove("text-yellow-500");
        }
      }
    });

    if (favGrid && favSection && favCount) {
      const deptFavs = favs.filter((f) => f.deptId === currentDeptId);

      if (deptFavs.length > 0) {
        favSection.classList.remove("hidden");
        favCount.textContent = `(${deptFavs.length})`;
        favGrid.innerHTML = "";

        deptFavs.forEach((fav) => {
          // Find original card or create one
          const original = document.querySelector(
            `[data-course-id="${fav.id}"][data-department-id="${fav.deptId}"]`,
          );
          if (original) {
            const clone = original.cloneNode(true) as HTMLElement;
            // Remove hidden class if it was hidden by search
            clone.classList.remove("hidden");
            clone.style.display = "";
            clone
              .querySelector(".favorite-btn")
              ?.addEventListener("click", (e) => {
                e.preventDefault();
                e.stopPropagation();
                toggleFavorite(fav);
              });
            favGrid.appendChild(clone);
          }
        });
      } else {
        favSection.classList.add("hidden");
      }
    }
  }

  import { createFuse, normalizeTurkish } from "../../lib/search";

  const searchInput = document.getElementById(
    "courseSearch",
  ) as HTMLInputElement;
  const courseCards = Array.from(
    document.querySelectorAll(".course-card-wrapper"),
  ) as HTMLElement[];
  const semesterContainer = document.getElementById("semesterContainer");
  const searchResultsContainer = document.getElementById(
    "searchResultsContainer",
  );
  const noResults = document.getElementById("noResults");

  // Create Fuse instance with DOM elements associated
  // We search in the dataset directly
  const searchData = courseCards.map((card, index) => ({
    name: card.dataset.courseName || "",
    normalizedName: normalizeTurkish(card.dataset.courseName || ""),
    code: card.dataset.courseCode || "",
    id: index, // Track original index to map back to DOM
    element: card,
  }));

  const fuse = createFuse(searchData, ["name", "code", "normalizedName"], 0.4);

  function applySearch(query: string) {
    const q = query.trim();
    let visibleCount = 0;

    if (!q) {
      // Reset view: Show grouped list, hide search results
      courseCards.forEach((card) => card.classList.remove("hidden"));
      semesterContainer?.classList.remove("hidden");
      searchResultsContainer?.classList.add("hidden");
      searchResultsContainer!.innerHTML = ""; // Clean up
      visibleCount = courseCards.length;
    } else {
      // Perform search
      const results = fuse.search(q);

      // Hide original grouped container
      semesterContainer?.classList.add("hidden");

      // Show search container and populate it
      searchResultsContainer?.classList.remove("hidden");
      searchResultsContainer!.innerHTML = "";

      if (results.length > 0) {
        results.forEach((result) => {
          // Clone the original card to display in the flat list
          // We clone to avoid moving elements around and breaking the semester groups
          const originalCard = result.item.element;
          const clonedCard = originalCard.cloneNode(true) as HTMLElement;

          clonedCard.classList.remove("hidden");
          clonedCard.style.order = ""; // No need for order, we append in order

          // Re-bind favorite button
          clonedCard
            .querySelector(".favorite-btn")
            ?.addEventListener("click", (e) => {
              e.preventDefault();
              e.stopPropagation();
              // Trigger click on original button to reuse logic acting on data attributes
              originalCard
                .querySelector(".favorite-btn")
                ?.dispatchEvent(new Event("click"));

              // Visual update is handled by global updateUI, but might need a tick or manual sync for the clone?
              // updateUI handles ALL .course-card-wrapper, so it should update our clone too if it has the class!
              // Yes, cloneNode copies classes.
              // BUT matched elements in updateUI rely on document.querySelectorAll.
              // Since clone is appended, next updateUI call will find it. Good.
            });

          searchResultsContainer!.appendChild(clonedCard);
        });
      }

      visibleCount = results.length;
    }

    // Handle no results message
    if (noResults) {
      noResults.classList.toggle("hidden", visibleCount > 0);
    }

    // Refresh UI state (favorites icons) for the new clones
    // We need to defer slightly or just call updateUI if available globally
    // Luckily updateUI is scoped inside script but we can call it.
    if (typeof updateUI === "function") {
      updateUI();
    }
  }

  searchInput?.addEventListener("input", (e) =>
    applySearch((e.target as HTMLInputElement).value),
  );

  // Initial help text
  applySearch("");

  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".favorite-btn").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        e.preventDefault();
        e.stopPropagation();
        const wrapper = btn.closest(".course-card-wrapper") as HTMLElement;
        if (wrapper) {
          toggleFavorite({
            id: wrapper.dataset.courseId,
            name: wrapper.dataset.courseName,
            code: wrapper.dataset.courseCode,
            uniId: wrapper.dataset.universityId,
            deptId: wrapper.dataset.departmentId,
          });
        }
      });
    });
    updateUI();
  });
</script>
