      const mobileMenuBtn = document.getElementById("mobileMenuBtn");
      const menu = document.getElementById("mobileMenu");
      const menuIcon = document.getElementById("menuIcon");
      const closeIcon = document.getElementById("closeIcon");

      if (mobileMenuBtn) {
        mobileMenuBtn.addEventListener("click", () => {
          const isHidden = menu?.classList.toggle("hidden");
          menuIcon?.classList.toggle("hidden", !isHidden);
          closeIcon?.classList.toggle("hidden", isHidden);
        });
      }

      // Global Settings Persistance (Lightweight version of QuizPlayer logic)
      (function initGlobalSettings() {
        const defaultSettings = {
          playbackRate: 1.2,
          showAnswers: true,
          showExplanations: true,
          hideIncorrectOptions: false,
          filterUnite: "all",
          filterIncorrect: false,
          filterUnanswered: false,
          voiceURI: "",
        };

        function loadStoredSettings() {
          const saved = localStorage.getItem("quiz-settings");
          return saved
            ? { ...defaultSettings, ...JSON.parse(saved) }
            : defaultSettings;
        }

        function saveStoredSettings(newSettings) {
          const current = loadStoredSettings(); // merge to avoid overwriting unhandled keys
          const merged = { ...current, ...newSettings };
          localStorage.setItem("quiz-settings", JSON.stringify(merged));
        }

        // Initialize inputs if they exist
        const settings = loadStoredSettings();

        const bindCheckbox = (id, key) => {
          const el = document.getElementById(id);
          if (el) {
            el.checked = settings[key];
            el.addEventListener("change", (e) => {
              saveStoredSettings({ [key]: e.target.checked });
            });
          }
        };

        const bindSelect = (id, key) => {
          const el = document.getElementById(id);
          if (el) {
            // Special case for rate which is number
            if (key === "playbackRate") {
              el.value = settings[key].toFixed(1);
              el.addEventListener("change", (e) => {
                const val = parseFloat(e.target.value);
                saveStoredSettings({ [key]: val });
              });
            } else {
              el.value = settings[key] || "";
              el.addEventListener("change", (e) => {
                saveStoredSettings({ [key]: e.target.value });
              });
            }
          }
        };

        // We only bind the 'Programmatic/Global' settings here.
        // Filters are context dependent so we might not want to save them globally from the index page
        // BUT the user asked for it. However, QuizPlayer resets them.
        // So binding them here just means they are 'saved' but will be reset on next quiz load.
        // That's acceptable behavior for now.

        document.addEventListener("DOMContentLoaded", () => {
          bindCheckbox("setting-show-answers", "showAnswers");
          bindCheckbox("setting-show-explanations", "showExplanations");
          bindCheckbox(
            "setting-hide-incorrect-options",
            "hideIncorrectOptions",
          );

          // Filter Settings
          bindCheckbox("setting-incorrect", "filterIncorrect");
          bindCheckbox("setting-unanswered", "filterUnanswered");
          bindSelect("setting-unit", "filterUnite");

          bindSelect("setting-playback-rate", "playbackRate");
          bindSelect("setting-voice", "voiceURI");

          // Populate voices globally
          const voiceSelect = document.getElementById("setting-voice");
          if (voiceSelect) {
            const populateVoices = () => {
              const voices = window.speechSynthesis.getVoices();
              if (voices.length === 0) return;

              const trVoices = voices.filter((v) =>
                v.lang.toLowerCase().replace("_", "-").includes("tr-tr"),
              );
              const voicesToShow = trVoices.length > 0 ? trVoices : voices;

              voiceSelect.innerHTML =
                '<option value="">VarsayÄ±lan Ses</option>';
              voicesToShow.forEach((voice) => {
                const opt = document.createElement("option");
                opt.value = voice.voiceURI;
                opt.text = `${voice.name} (${voice.lang})`;
                if (voice.voiceURI === settings.voiceURI) opt.selected = true;
                voiceSelect.add(opt);
              });
            };

            populateVoices();
            if (speechSynthesis.onvoiceschanged !== undefined) {
              speechSynthesis.onvoiceschanged = populateVoices;
            }
          }
        });
      })();
    </script>
