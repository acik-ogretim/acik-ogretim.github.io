import Layout from "../../layouts/Layout.astro";
import { getUniversities, getDepartments, getCourses } from "../../lib/api";

export async function getStaticPaths() {
  const universities = await getUniversities();
  const paths = [];

  for (const uni of universities) {
    const departments = uni.departments || [];
    for (const dept of departments) {
      paths.push({
        params: { university: uni.id, department: dept.id },
        props: { university: uni, department: dept },
      });
    }
  }
  return paths;
}

const { university, department } = Astro.props;
const allCourses = await getCourses(university.id, department.id);

// Group by semester and sort each group alphabetically
const semesters = Array.from({ length: department.duration }, (_, i) => i + 1);
const groupedCourses = semesters.map((sem) => ({
  number: sem,
  courses: allCourses
    .filter((c) => c.semester === sem)
    .sort((a, b) => a.name.localeCompare(b.name, "tr")),
}));
