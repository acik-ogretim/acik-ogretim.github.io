import Layout from '../layouts/Layout.astro';

import fs from 'node:fs/promises';
import path from 'node:path';

import type { Department, University } from '../lib/types';

// Load raw data for accurate counts and content
const DATA_DIR = path.resolve(process.cwd(), 'data');
let allUniversitiesData: University[] = [];
try {
  const content = await fs.readFile(path.join(DATA_DIR, 'universities.json'), 'utf-8');
  allUniversitiesData = JSON.parse(content);
} catch (e) {
  console.error('Failed to load universities.json', e);
}

// Group departments by university and enrich with real counts
// WE USE data/universities.json AS SOURCE OF TRUTH
const universityData = allUniversitiesData.map((uni: University) => {
  return {
    ...uni,
    // For display, we keep standard fields.
    // The raw JSON already has 'departments' array.
    // We want to count ALL departments in the raw JSON.
    totalDepartmentCount: uni.departments?.length || 0,
    // The UI expects 'departments' to be a list of active ones or similar.
    // In raw JSON, 'departments' contains all objects.
    // Let's filter for active ones if needed, or just map them to match expected shape.
    departments: (uni.departments || []).filter((d: Department) => d.active !== false) // default true if undefined
  };
}).sort((a, b) => a.order - b.order);

// Calculate real stats from data directory
async function getStats() {
  let courseCount = 0;
  let questionCount = 0;

  // Use the already loaded data for department count
  const departmentCount = allUniversitiesData.reduce((acc, uni) => acc + (uni.departments?.length || 0), 0);

  try {
    // Count Courses
    const coursesDir = path.join(DATA_DIR, 'courses');
    const uniDirs = await fs.readdir(coursesDir).catch(() => []);

    for (const uni of uniDirs) {
      if (uni.startsWith('.')) continue;
      const uniPath = path.join(coursesDir, uni);
      const deptFiles = await fs.readdir(uniPath).catch(() => []);

      for (const file of deptFiles) {
        if (!file.endsWith('.json')) continue;
        try {
          const content = await fs.readFile(path.join(uniPath, file), 'utf-8');
          const courses = JSON.parse(content);
          if (Array.isArray(courses)) {
            courseCount += courses.length;
          }
        } catch {}
      }
    }

    // Count Questions
    const questionsDir = path.join(DATA_DIR, 'questions');
    const qUniDirs = await fs.readdir(questionsDir).catch(() => []);

    for (const uni of qUniDirs) {
      if (uni.startsWith('.')) continue;
      const uniPath = path.join(questionsDir, uni);
      const courseFiles = await fs.readdir(uniPath).catch(() => []);

      for (const file of courseFiles) {
        if (!file.endsWith('.json')) continue;
        try {
          const content = await fs.readFile(path.join(uniPath, file), 'utf-8');
          const questions = JSON.parse(content);
          if (Array.isArray(questions)) {
            questionCount += questions.length;
          }
        } catch {}
      }
    }
  } catch (e) {
    console.error('Error calculating stats:', e);
  }

  return { courseCount, questionCount, departmentCount };
}

const calculatedStats = await getStats();

// Stats
const stats = {
  universities: allUniversitiesData.length,
  departments: calculatedStats.departmentCount || 150,
  courses: calculatedStats.courseCount || 150, // Fallback if 0
  questions: calculatedStats.questionCount || 15000, // Fallback if 0
};

